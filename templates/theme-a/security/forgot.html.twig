{% extends 'theme-a/base.html.twig' %}
{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-3">
                <form method="post">

                    <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>
                    <p>Entrer votre email pour recevoir un lien de réinitialisation du mot de passe</p>
                    <div class="form-group">
                    <label for="inputEmail" class="sr-only">Email</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <button class="btn btn-lg btn-primary" type="submit">
                        Envoyer
                    </button>

                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}


