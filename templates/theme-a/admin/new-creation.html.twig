{% extends 'theme-a/base.html.twig' %}
{% block title %}Nouvelle création{% endblock %}
{% block body %}
<section class="page-section padding-60">
    <div class="container">
        <div class="row">

            {#
                {%  if edit is defined %}
                <h2>Modifier</h2>
                {% else %}
                <h2>Nouvelle création</h2>
                {% endif %}
                #}
            <div class="col-md-6 col-md-offset-3">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="title">Titre</label>
                    {{ form_widget(form.title) }}
                    <span class="helper-text" data-error="Champ obligatoire"></span>
                </div>
                <div class="form-group">
                    <label for="achievement_date">{{ form_label(form.achievement_date) }}</label>
                    {{ form_widget(form.achievement_date) }}
                    <span class="helper-text" data-error="Veuillez entrer un date valide"></span>
                </div>
                <div class="form-group">
                    <label for="category">{{ form_label(form.category) }}</label>
                    {{ form_widget(form.category) }}
                    <span class="helper-text" data-error="Veuillez choisir une catégorie"></span>
                </div>
                <div class="form-group">
                    <label for="description">{{ form_label(form.description) }}</label>
                    {{ form_widget(form.description) }}
                    <span class="helper-text" data-error="Champ obligatoire"></span>
                </div>
                {% if image is defined %}
                    <div>
                        <small>image actuelle</small>
                        <br>
                        <img class="" width="100px" height="auto" src="{{ asset('uploads/' ~ image) }}">
                    </div>
                {% endif %}
                <div class="form-group file-field">
                    <!--<div class="btn"> -->
                        <label>image</label>
                        {{ form_widget(form.image) }}
                    <!--</div>-->
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label for="altImage">{{ form_label(form.altImage) }}</label>
                    {{ form_widget(form.altImage) }}
                    <span class="helper-text" data-error="Champ obligatoire"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">{{ button_text }}</button>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
</section>
{% endblock %}