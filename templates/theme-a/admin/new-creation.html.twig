{% extends 'theme-a/base.html.twig' %}
{% block title %}Nouvelle création{% endblock %}
{% block body %}
    <section class="page-section-no-padding" style="margin-top: 40px">
    <div class="container">
    <div class="row">
    <div class="col-md-4 col-md-offset-4">
{#
    {%  if edit is defined %}
    <h2>Modifier</h2>
    {% else %}
    <h2>Nouvelle création</h2>
    {% endif %}
    #}
        {{ form_start(form) }}
        <div class="form-group">
            <label for="title">Titre</label>
            {{ form_widget(form.title) }}
            <span class="helper-text" data-error="Champ obligatoire"></span>
        </div>
        <div class="form-group">
            <label for="element_date">{{ form_label(form.achievement_date) }}</label>
              {{ form_widget(form.achievement_date) }}
            <span class="helper-text" data-error="Veuillez entrer un date valide"></span>
        </div>
        <div class="form-group">
            <label for="element_description">{{ form_label(form.description) }}</label>
            {{ form_widget(form.description) }}
            <span class="helper-text" data-error="Champ obligatoire"></span>
        </div>
        {% if image is defined %}
        <div>
            <small>image actuelle</small>
            <br>
            <img class="" width="100px" height="auto" src="{{ asset('uploads/' ~ image) }}">
        </div>
        {% endif %}
        <div class="form-group file-field">
            <div class="btn">
                <small>image</small>
                {{ form_widget(form.image) }}
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
       <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">{{ button_text }}</button>
        </div>
    {{ form_end(form) }}

    </div>
    </div>
    </div>
    </section>
{% endblock %}