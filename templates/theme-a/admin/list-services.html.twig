{% extends 'theme-a/base.html.twig' %}
{% block title %}Mes services{% endblock %}
{% block body %}
    {% set date = "" %}
    {% set description = "" %}

    <section class="page-section padding-60" style="">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-dark elements-list">
                        {% for element in elements %}
                            {% if element.achievementDate is defined %}
                                {% set date = element.achievementDate|date("d/m/Y")  %}
                            {% elseif element.createdDate is defined %}
                                {% set date = element.createdDate|date("d/m/Y")  %}
                            {% endif %}

                            {% if element.description is defined %}
                                {% set description = element.description|raw  %}
                            {% elseif element.intro is defined %}
                                {% set description = element.intro|raw  %}
                            {% endif %}
                            <tr class="collection-item">
                                <td class="col">
                                    <div class=" avatar">
                                        {% if element.imageHome %}
                                            <img src="{{ asset('uploads/' ~ element.imageHome) }}" alt="" >
                                        {% else %}
                                            <img src="{{ asset('build/assets/theme-a/images/leafs.jpg') }}" alt="" >
                                        {% endif %}
                                    </div>
                                </td>
<!--
                                <td class="col">

                                    <p><small>{% if date  is defined %}{{ date }}{% endif %}</small><br>
                                   {#     <small class="{% if element.published == '1' %}green-text {% else %} orange-text {% endif %}">{% if element.published == '1' %}<i class="material-icons" style="font-size:16px;position:relative;top:4px;">check</i> Publié {% else %} Non-publié{% endif %}</small> #}
                                    </p>
                                </td>
                                -->
                                <td class="col">
                                    <h2 class="title">{{ element.title1 ~' ' ~ element.title2 }}</h2>
                                    {% if element.category is defined %}
                                        <small>
                                            {% for category in element.category %}
                                                <span class="categories">{{ category.name }}</span>
                                            {% endfor %}
                                        </small> <br><br>
                                    {% endif %}
                                    {% if description is defined %}{{ description|striptags('<strong>')|raw|nl2br }}{% endif %}
                                </td>
                                <td class="secondary-content col">
                                    <a href="{{ path(edit_path, { 'id': element.id }) }}" class="">Modifier <i class="material-icons">edit</i></a><br>
                                    {#<a href="{{ path(publish_path, { 'id': element.id }) }}" class="  {% if element.published == '1' %}orange-text {% else %} green-text {% endif %}">{% if element.published == '1' %} Dé-publier <i class="material-icons">archive</i>{% else %} Publier <i class="material-icons">publish</i>{% endif %} </a> #}
                                    <br><br><a href="{{ path(delete_path, { 'id': element.id }) }}" class="red-text">Supprimer <i class="material-icons">delete</i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>

                </div>
            </div>
        </div>
    </section>
{% endblock %}