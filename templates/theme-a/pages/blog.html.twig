{% extends 'theme-a/base.html.twig' %}
{% block title %}Blog{% endblock %}
{% block body %}
<!-- Right Sidebar Container  -->
<section class="page-section padding-30">
    <div class="container">
        <div class="row">
            <!-- Content -->
            <div class="col-md-12">
                <div class="blog-listing">
                    {% for element in elements %}
                    <article>
                        {% if element.image %}
                        <img class="img-thumbnail" src="{{ asset('uploads/' ~ element.image) }}">
                        {% else %}
                            <img <img class="img-thumbnail"  src="{{ asset('build/assets/theme-base/images/leafs.jpg') }}">
                        {% endif %}
                        <h2>{{ element.title }}</h2>
                        <hr class="title-underline">
                        <p>
                            {{ element.intro }}
                        </p>
                        <div class="post-meta">
                            <span><i class="fa fa-calendar"></i>{{ element.createdDate|date("d/m/Y") }}</span>
                            <span><i class="fa fa-user"></i> By <a href="#">John Doe</a> </span>
                            <span><i class="fa fa-tag"></i> <a href="#">Duis</a>, <a href="#">News</a> </span>
                            <span><i class="fa fa-comments"></i> <a href="#">12 Comments</a></span>
                            <a href="{{ path('show_article', { 'id': element.id }) }}" class="btn btn-xs btn-primary pull-right">Read more...</a>
                        </div>
                    </article>
