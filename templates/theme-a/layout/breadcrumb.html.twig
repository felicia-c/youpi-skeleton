<div class="page-header breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb">
                    <li><a href="{{ path('index') }}">Home</a></li>
                    {% if step_title is defined %}
                    <li><a href="{% if step_path is defined %}{{ path(step_path) }}{% else %}#{% endif %} ">{{ step_title }}</a></li>
                    {% endif %}
                    <li>{{ page_title }}</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1>{{ page_title }}</h1>
            </div>
        </div>
    </div>
</div>